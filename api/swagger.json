{
    "swagger": "2.0",
    "info": {
        "description": "Filepoint is the Gearpoint's file manager service.",
        "title": "Filepoint",
        "contact": {
            "name": "Luan Baggio",
            "url": "https://github.com/luabagg",
            "email": "luanbaggio0@gmail.com"
        }
    },
    "basePath": "/v1",
    "paths": {
        "/health": {
            "get": {
                "description": "Returns a 200 OK response",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "HealthCheck"
                ],
                "summary": "Health check",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/upload": {
            "post": {
                "description": "Saves a file in the storage service",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "Upload"
                ],
                "summary": "File upload",
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        }
    }
}